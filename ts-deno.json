{
  "include": ["lib"],
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "jsx": "react",
    "lib": ["es2022"],
    "types": ["node"],
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true
  }
}

